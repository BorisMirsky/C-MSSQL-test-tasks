@model KESKO_task2.Models.IndexModel
@using Microsoft.AspNetCore.Http
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor



@{
    ViewData["Title"] = "Home Page";
}

<link href = "@Url.Content("~/ css / style.css")" rel = "stylesheet" type = "text/css" />

<div class="view">
    <div class="row form-horizontal">
        <div class="col-md-12">

            <br/><br/>
            <h3>Задача 2</h3>

            <div id="fieldPass" style="display: block;">

                @using (Html.BeginForm("PassData", "Home" ))
                {
                 @Html.AntiForgeryToken()
                 @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                 <div class="form-group">
                         <h5>Первое число</h5>
                         <div class="col-sm-3">
                           @Html.EditorFor(model => model.NumberI, new { htmlAttributes = new { @class = "form-control",autocomplete="off" }})
                           @Html.ValidationMessageFor(model => model.NumberI, "", new { @class = "text-danger" })  
                         </div> 
                         <h5>Второе число</h5>
                         <div class="col-sm-3">
                           @Html.EditorFor(model => model.NumberJ, new { htmlAttributes = new { @class = "form-control", autocomplete="off" }})
                           @Html.ValidationMessageFor(model => model.NumberJ, "", new { @class = "text-danger" })  
                         </div> 
                  </div>    
                  <br/>
                     <p>Result: <b>@HttpContextAccessor.HttpContext.Session.GetString("Result")</b> </p>
                    <br/>
                    <div class="form-group">
                            <input type="submit" value="Отправить" class="btn btn-outline-success" />
                    </div>  
                }
    </div>
    <br/>
  </div>
 </div>
</div>

